<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.platform.mapper.UserMapper">

    <select id="queryPage" resultType="com.project.platform.entity.User">
        SELECT users.*
        FROM users
        <include refid="queryConditions"/>
        ORDER BY users.id DESC
        LIMIT #{offset},#{pageSize}
    </select>

    <!-- 查询符合条件的数据总数-->
    <select id="queryCount" resultType="int">
        SELECT count(users.id) FROM users
        <include refid="queryConditions"/>
    </select>

    <!-- 定义查询条件-->
    <sql id="queryConditions">
        <where>
            <if test="query.username !=null and query.username.trim() !=''">
                AND users.username LIKE CONCAT('%',#{query.username},'%')
            </if>
            <if test="query.tel !=null and query.tel.trim() !=''">
                AND users.tel LIKE CONCAT('%',#{query.tel},'%')
            </if>
            <if test="query.status !=null and query.status.trim() !=''">
                AND users.status LIKE CONCAT('%',#{query.status},'%')
            </if>
        </where>
    </sql>
    <insert id="insert" parameterType="com.project.platform.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="username != null">username,</if>
            <if test="passwordHash != null">password_hash,</if>
            <if test="avatarUrl != null">avatar_url,</if>
            <if test="phone != null">phone,</if>
            <if test="email != null">email,</if>
            <if test="isActive != null">is_active,</if>
            <if test="isAdmin != null">is_admin,</if>
            <if test="lastLogin != null">last_login,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="updatedAt != null">updated_at,</if>
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="username != null">#{username},</if>
            <if test="passwordHash != null">#{passwordHash},</if>
            <if test="avatarUrl != null">#{avatarUrl},</if>
            <if test="phone != null">#{phone},</if>
            <if test="email != null">#{email},</if>
            <if test="isActive != null">#{isActive},</if>
            <if test="isAdmin != null">#{isAdmin},</if>
            <if test="lastLogin != null">#{lastLogin},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
        </trim>
    </insert>
    <update id="updateById" parameterType="com.project.platform.entity.User">
        UPDATE users
        <set>
            <if test="username !=null">
                username=#{username},
            </if>
            <if test="passwordHash !=null">
                password_hash=#{passwordHash},
            </if>
            <if test="avatarUrl !=null">
                avatar_url=#{avatarUrl},
            </if>
            <if test="phone !=null">
                phone=#{phone},
            </if>
            <if test="email !=null">
                email=#{email},
            </if>
            <if test="isActive !=null">
                is_active=#{isActive},
            </if>
            <if test="isAdmin !=null">
                is_admin=#{isAdmin},
            </if>
            <if test="lastLogin !=null">
                last_login=#{lastLogin},
            </if>
            <if test="updatedAt !=null">
                updated_at=#{updatedAt},
            </if>
        </set>
        WHERE id=#{id}
    </update>

    <delete id="removeByIds">
        DELETE FROM users
        WHERE id IN
        <foreach item="id" collection="list" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

</mapper>